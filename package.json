{
  "name": "uoc-ehc2-pac3",
  "version": "1.0.0",
  "private": true,
  "description": "Boilerplate for Advanced HTML/CSS Tools UOC students",
  "scripts": {
    "parcel:serve": "parcel -p 8123 --target web --open",
    "parcel:build": "parcel build --target web --no-source-maps --no-cache",
    "clean": "rimraf dist .cache .cache-loader .parcel-cache",
    "start": "npm-run-all clean parcel:serve",
    "build": "npm-run-all clean parcel:build"
  },
  "targets": {
    "web": {
      "context": "browser",
      "publicUrl": "./",
      "source": "src/index.html",
      "engines": {
        "browsers": "last 2 versions, > 0.5%, not dead"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/isaacBejarano/uoc-ehc2-pac3.git"
  },
  "author": {
    "name": "Isaac Bejarano",
    "email": "undefined"
  },
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/isaacBejarano/uoc-ehc2-pac3/issues"
  },
  "homepage": "https://github.com/isaacBejarano/uoc-ehc2-pac3#readme",
  "devDependencies": {
    "@parcel/transformer-sass": "^2.13.3",
    "@tailwindcss/postcss": "^4.1.8",
    "autoprefixer": "^10.4.20",
    "npm-run-all": "^4.1.5",
    "parcel": "^2.13.3",
    "postcss-preset-env": "^10.1.3",
    "posthtml-include": "^2.0.1",
    "rimraf": "^6.0.1",
    "sharp": "^0.33.5",
    "tailwindcss": "^4.1.8"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
